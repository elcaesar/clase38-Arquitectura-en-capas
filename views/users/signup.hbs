{{#if message}}
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{message}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
{{/if}} 

<div class="col-md-6 mx-auto">
  <div class="card text-bg-light">
    <div class="card-body">
      <h3 class="text-center">Registro de nuevo usuario</h3>
      <form action="/usuario/signup" method="post" enctype="multipart/form-data">
        <div class="row">
          <div class="col-4">
            <div class="form-group">
              <label>Nombre:</label>
              <input class="form-control" required type="text" name="nameUser" autofocus/>
            </div>
          </div>
          <div class="col-8">
            <div class="form-group">
              <label>Dirección:</label>
              <input class="form-control" required type="text" name="addressUser"/>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-4">
            <div class="form-group">
              <label>Edad:</label>
              <input class="form-control" required type="number" name="ageUser"/>
            </div>
          </div>
          <div class="col-8">
            <div class="form-group">
              <label>Teléfono:</label>
              <input class="form-control" required type="text" name="phoneUser"/>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-6">
            <div class="form-group">
              <label>Email:</label>
              <input class="form-control" required type="email" name="userEmail"/>
            </div>
          </div>
          <div class="col-6">
            <div class="form-group">
              <label>Password:</label>
              <input class="form-control" required type="password" name="userPass"/>
            </div>
          </div>
        </div>

        <div class="form-group">
            <label>Avatar:</label>
            <input class="form-control" required type="file" name="userAvatar"/>
        </div>
        <hr>
        <div class="d-flex form-group ">
            <input class="btn btn-primary btn-block" type="submit" value="Crear Usuario"/>
        </div>
        <hr>
        <p>¿Ya es usuario? <a href="/usuario/login">Ingrese</a></p>
      </form>                  

    </div>
  </div>
</div>